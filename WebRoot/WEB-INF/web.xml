<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	  <listener>  
	        <listener-class>com.hlwzd.personallibrary.MySessionListener</listener-class>  
	  </listener>  
	  <filter>
	  	<filter-name>characterEncodingFilter</filter-name>
	  	<filter-class>com.hlwzd.personallibrary.CharacterEncodingFilter</filter-class>
	  	<init-param>
	  		<param-name>encode</param-name>
	  		<param-value>UTF-8</param-value>
	  	</init-param>
	  </filter>
	  <filter-mapping>
	  	<filter-name>characterEncodingFilter</filter-name>
	  	<url-pattern>/*</url-pattern>
	  </filter-mapping>
	    
	  <servlet>
	    <description>Send request to Manager, which dispatches action.</description>
	    <display-name>Manager</display-name>
	    <servlet-name>manager</servlet-name>
	    <servlet-class>com.hlwzd.personallibrary.Manager_Servlet</servlet-class>
	  </servlet>
	
	  <servlet-mapping>
	    <servlet-name>manager</servlet-name>
	    <url-pattern>/servlet/manager</url-pattern>
	  </servlet-mapping>
	  
	<servlet>
		<servlet-name>validateCodeServlet</servlet-name>
		<servlet-class>cn.dsna.util.images.ValidateCodeServlet</servlet-class>
	</servlet>	
	<servlet-mapping>
		<servlet-name>validateCodeServlet</servlet-name>
		<url-pattern>*.images</url-pattern>
	</servlet-mapping>
	  
	  <welcome-file-list>  
	    <welcome-file>index.jsp</welcome-file>  
	    <welcome-file>index.html</welcome-file>  
	  </welcome-file-list>  

</web-app>